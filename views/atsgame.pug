extends base

block content
	span.title ATS Game
	.container-fluid
		.row
			.col-md-4
				.panel.panel-success
					.panel-heading
						| Scoreboard
					#atsScoreboard
			.col-md-4
				.panel.panel-primary
					.panel-heading
						span#atsWeek
						button.atsInc.btn.btn-default.right.pushUp.hidden(value=1)
							span.glyphicon.glyphicon-chevron-right
						button.atsInc.btn.btn-default.right.pushUp.hidden(value=-1)
							span.glyphicon.glyphicon-chevron-left
						button#atsSubmit.btn.btn-warning.right.pushUp.hidden Save
					#atsPicks

block scripts
	script(type='text/javascript').
		let wk = getWeek(new Date(), 'nfl')
		getAtsPicks(2018, (wk < 17)?wkl:17)
		getAtsScoreboard()