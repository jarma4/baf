extends base

block content
   a#sportNfl.sportPick.dropped
      img.logo-md(src="images/nfl_logo_sprite_medium.png")
   //- span.glyphicon.glyphicon-resize-horizontal
   a#sportNba.sportPick.dimmed
      img.logo-md(src="images/nba_logo_sprite_medium.png")
   //- strong.lead#nflWeek
   .container-fluid
      .row.no-gutters
         .col-md-3
            em#timestamp.right
            #savedBets
            #col1
         .col-md-3
            #col2
         .col-md-3
            #col3
         .col-md-3
            #col4
   #betModal.modal.fade
      .modal-dialog
         .modal-content
            .modal-header
               button.close(type='button', data-dismiss='modal') #[span &times;]
               h4.text-center#betTitle
            .modal-body
               form
                  .form-group
                     label(for='userList') Send Bet To:
                     select#userList.form-control(autofocus)
                  .form-group
                     label(for='betAmount') Bet Amount:
                     .input-group
                        button.btn-increment.btn.btn-primary(value="0")
                           span.glyphicon.glyphicon-minus
                        input#betAmount.small-inputbox(value='2', min='1', type='number')
                        button.btn-increment.btn.btn-primary(value="1")
                           span.glyphicon.glyphicon-plus
                     //- .form-group#oddsMod
                     //- 	label(for='betChange') Change Odds:
                     //- 	.input-group
                     //- 		button.btn-increment.btn.btn-primary(value="0")
                     //- 			span.glyphicon.glyphicon-minus
                     //- 		input#betChange.small-inputbox(type='number')
                     //- 		button.btn-increment.btn.btn-primary(value="1")
                     //- 			span.glyphicon.glyphicon-plus
                     input#betUser2.nodisplay
                     input#betOdds.nodisplay
                     input#betType.nodisplay
                     input#betTeam1.nodisplay
                     input#betTeam2.nodisplay
                     input#betSport.nodisplay
                     input#betGametime.nodisplay
            .modal-footer
               button#betSubmit.btn.btn-success.btn-lg.btn-block(type='submit', data-dismiss='modal') Bet
               button#betWatch.btn.btn-primary.btn-lg(type='submit', data-dismiss='modal') Set odds watch
               button#betSave.btn.btn-primary.btn-lg(type='submit', data-dismiss='modal') Save for later
   #savedModal.modal.fade
      .modal-dialog
         .modal-content
            .modal-header
               button.close(type='button', data-dismiss='modal') #[span &times;]
               h4#savedTitle
            .modal-body
               h4#oddsText
               button#savedSend.btn.btn-success.btn-lg.btn-block(type='submit', name='status', value='1', data-dismiss="modal") Send with current odds
               button#savedDelete.btn.btn-danger.btn-lg.btn-block(type='submit', name='status', value='2', data-dismiss="modal") Delete
               input#savedId.nodisplay
               input#savedNewOdds.nodisplay   
   
block scripts
   script(type='text/javascript') getOdds()
   script(type='text/javascript') getUsers()   
   script(type='text/javascript') getBets(-1,'savedBets',1);
