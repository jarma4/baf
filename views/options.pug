extends base

block content
   span.title Options
   .panel-group
      .panel.panel-primary
         #username.panel-heading
         .panel-body
            form
               label(for='slack') Slack handle for Notifications:
               input#slack.form-control
               .checkbox
                  label
                     input#prefNflEveryone(type='checkbox')
                     | Include in NFL "EVERYONE" betting group
               .checkbox
                  label
                     input#prefNbaEveryone(type='checkbox')
                     | Include in NBA "EVERYONE" betting group
               .checkbox
                  label
                     input#prefTextAccept(type='checkbox')
                     | Slack me when someone accepts my bet
               label(for='changeSlack') Default Start Page:
               // input#changeSlack.form-control
               select#prefDefaultPage.form-control
                     option(value='odds') Odds
                     option(value='bets') Bets
                     option(value='stats') Stats
                     option(value='overunder') Over Under
               button#prefSave.btn.btn-success(type='submit', name='status', value='1', data-dismiss="modal") Save
   a.btn.btn-primary.btn-lg.btn-block(type='button', data-toggle='modal', data-target='#changePasswordModal') Change Password
   a.btn.btn-primary.btn-lg.btn-block(type='button', href='/admin/logout') Logout

block modals
   #changePasswordModal.modal.fade
      .modal-dialog
         .modal-content
            .modal-header
               button.close(type='button', data-dismiss='modal') #[span.white &times;]
               h4 Change Password:
            .modal-body
               form
                  label(for='changePassword') New Password
                  input#changePassword.form-control(type='password', required)
                  label(for='changePassword2') Retype New Password
                  input#changePassword2.form-control(type='password', required)
            .modal-footer
                  button#changeSubmit.btn.btn-success.btn-lg.btn-block(type='submit', data-dismiss='modal') Submit
block scripts
   script(type='text/javascript') getPrefs()
