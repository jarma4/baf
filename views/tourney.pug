extends base

block content
	span.title Tournament Time
	//- strong.lead#nflWeek
	.container-fluid
		.row.no-gutters
			.col-md-12
				#sportMenu
					ul
						li.sportPick.nfl.selected
							a NFL
						li.sportPick.nba
							a NBA
				select#bracketYear.btn-default.right
							option(value='2022') 2022
							option(value='2021') 2021
		.row
			.col-md-12
				p.help-heading Rules:
					ul
						li Pick winner for every game of finals
						li Once winner picked, team will show in next round
						li When changing earlier pick, make sure to pick again in following rounds
						li Correct picks score point x round #
						li Most total points wins
				#bracketResultsArea
				#bracketPicksArea
				button#bracketActionBtn.btn.btn-lg.btn-block.btn-primary.pushDown(data-toggle="modal" data-target="#tourneyModal") Save
block modals
	#tourneyModal.modal.fade
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal') #[span.white &times;]
					h4#tourneyAcceptText
				.modal-body
					.form-group
						button#tourneyAcceptSubmit.btn.btn-success.btn-lg.btn-block(type='submit', data-dismiss="modal") Accept
						button.btn.btn-danger.btn-lg.btn-block(type='submit', data-dismiss="modal") Cancel
					input#tourneyPicks.nodisplay
					input#tourneySport.nodisplay

block scripts
	script(type='text/javascript').
