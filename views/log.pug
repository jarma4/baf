extends base

block content
	span.title Bracket
	//- strong.lead#nflWeek
	.container-fluid
		.row.no-gutters
			.col-md-12
				#sportMenu
					ul
						li.sportPick.nfl.selected
							a NFL
						li.sportPick.nba
							a NBA   
				select#bracketYear.btn-default.right
							option(value='2021') 2021
		.row
			.col-md-12
				p.title.center Tournament Time!
				#bracketInfoArea
				#bracketPicksArea.hidden
				button#bracketActionBtn.btn.btn-lg.btn-block.btn-primary.pushDown Join

block scripts
	script(type='text/javascript').
		getChoices()
